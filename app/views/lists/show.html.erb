<div class="container">
  <h1 style="color:black; margin-bottom:1em;"><%= @list.name %></h1>
  <%= link_to "Create Bookmark", new_list_bookmark_path(@list), class: "btn btn-dark"  %>
  <div class="card-container">
    <% @bookmarks.each do |bookmark| %>
      <div class="card-product custom-card-add column-6">
        <img src="<%= bookmark.movie.poster_url%>" />
        <div class="card-product-infos">
          <h2> <%= bookmark.movie.title %></h2>
          <p><%= bookmark.comment %></p>
        </div>
        <%= link_to "Delete", bookmark_path(bookmark), method: :delete, class: 'btn-danger', data: { confirm: "Are you sure you want to delete bookmark?" } %>
      </div>
    <% end %>
  </div>
</div>
<%= link_to "Back to list", lists_path, class: "btn btn-info"  %>
</div>
