<div class="home-banner d-flex justify-content-between">
  <h1>Movie list</h1>
  <%= link_to "Create new list", new_list_path, class:"btn btn-info create-button" %>
</div>
<div class="container">
  <% @lists.each do |list| %>
    <div class="d-flex justify-content-center">
      <%= link_to list_path(list) do %>
        <% if list.photo.attached? %>
          <div class="button" style="text-decoration: none; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 400, crop: :fill %>') ">
          <% else %>
            <div class="button" style="text-decoration: none; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://thumbs.dreamstime.com/b/big-open-clapper-board-movie-reel-cinema-icon-set-movie-film-elements-flat-design-cinema-movie-time-flat-icons-f-95500226.jpg') ">
            <% end %>
            <h3><%= list.name %></h3>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
