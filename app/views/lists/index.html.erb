<div class="container">
  <h1>Lists</h1>


    <% @lists.each do |list| %>
      <div class="d-flex justify-content-center">
      <div class="card button w-50 btn" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 400, crop: :fill %>') ">
          <%= link_to list.name, list_path(list) %>
        </div>
      </div>
    <% end %>

    <%= link_to "Create new list", new_list_path, class:"btn btn-primary" %>
    </div>
