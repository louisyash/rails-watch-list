<div class="container">
<div class="d-flex justify-content-between">
  <h1>Movie list</h1>
      <%= link_to "Create new list", new_list_path, class:"btn btn-dark mt-2 h-25" %>
      </div>


    <% @lists.each do |list| %>
      <div class="d-flex justify-content-center">

          <%= link_to list_path(list) do %>
          <div class="button" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 400, crop: :fill %>') ">
        <p><%= list.name %></p></div>
        <% end %>
      </div>
    <% end %>


    </div>
